<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".views.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/normal"
            mapbox:mapbox_cameraZoom="10" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/normal"
            android:layout_marginBottom="@dimen/normal"
            android:src="@drawable/ic_device" />

        <TextView
            android:id="@+id/deviceName"
            style="@style/Theme.FloodDetector.TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/xxsmall"
            android:paddingStart="@dimen/normal"
            android:paddingEnd="@dimen/normal"
            tools:text="Nama Device" />

        <TextView
            android:id="@+id/deviceLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal"
            android:paddingStart="@dimen/normal"
            android:paddingEnd="@dimen/normal"
            tools:text="Bandung, Jawa Barat, Indonesia"
            android:text="Lokasi alat..." />

        <TextView
            android:id="@+id/deviceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal"
            android:paddingStart="@dimen/normal"
            android:paddingEnd="@dimen/normal"
            tools:text="@string/lorem_ipsum" />

    </LinearLayout>

</ScrollView>